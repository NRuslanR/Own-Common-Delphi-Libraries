unit ConnectionInfo;

interface

type

  TConnectionInfo = record

    HostName: String;
    Port: Integer;
    DatabaseName: String;
    UserName: String;
    Password: String;

    constructor Create(
      HostName: String;
      Port: Integer;
      DatabaseName: String;
      UserName: String;
      Password: String
    );
    
  end;

implementation

end.
